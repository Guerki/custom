<div class="container">
<br />
<div class="card-columns">
  {{#foreach posts}}
    <div class="card">
      <a href="{{url}}"><img class="card-img-top" src="{{image}}" alt="Card image cap"></a>
      <div class="card-img-overlay">
        <h4 class="card-text text-xs-center" style="margin-top: 2em;"><a href="{{url}}">{{{title}}}</a></h4>
        <p class="text-muted card-text text-xs-center">{{date format='dddd DD MMM
        YYYY'}}</p>
        <hr>
        <hr>
        {{#if tags}}
          <small class="text-muted">{{tags separator=" | "}}</span>
        {{/if}}
      </div>
    </div>

  {{/foreach}}
</div>
{{#if pagination}}
{{{pagination}}}
{{/if}}

</div>
